{
    "editor.accessibilitySupport": "off",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.hover.above": false,
    "editor.minimap.enabled": false,
    "files.watcherExclude": {
        "**/.cache": true,
        "**/.dSYM": true,
        "**/build*/**": true,
        "**/docs*/**": true
    },
    "files.exclude": {
        "**/.cache": true,
        "**/.DS_Store": true,
        "**/.dSYM": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/Thumbs.db": true
    },
    "search.exclude": {
        "**/build*/**": true,
        "**/docs*/**": true
    },
    "window.commandCenter": false,
    "editor.scrollBeyondLastLine": false,
    "search.showLineNumbers": true,
    "telemetry.telemetryLevel": "off",
    "files.hotExit": "off",
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#e788ff7c",
        "editor.selectionHighlightBackground": "#ff00005b"
    },
    "cmake.configureOnOpen": true,
    "cmake.buildDirectory": "${workspaceFolder}/build.${buildKitVendor}-${buildKitVersion}-${buildType}",
    "cmake.copyCompileCommands": "${sourceDirectory}/compile_commands.json",
    "cmake.installPrefix": "${workspaceFolder}/build.${buildKitVendor}-${buildKitVersion}-${buildType}/install",
    "cmake.configureSettings": {
        "CMAKE_VERBOSE_MAKEFILE": true
    },
    // "clangd.path": "/opt/homebrew/opt/llvm/bin/clangd",
    // "clangd.arguments": [
    //     "--header-insertion=never"
    // ],
    // "cmake.additionalCompilerSearchDirs": [
    //     "/opt/homebrew/opt/llvm/bin",
    //     "/opt/homebrew/opt/gcc@13/bin"
    // ],
    // "python.defaultInterpreterPath": "/Users/thahn/.venv/py3_11/bin/python",
    // "explorer.confirmDelete": false,
    // "lldb.suppressUpdateNotifications": true,
    // "githubPullRequests.pullBranch": "never",
    // "fortran.linter.compilerPath": "/opt/homebrew/bin/gfortran",
    // "fortran.fortls.path": "/opt/homebrew/bin/fortls",
    "editor.inlayHints.enabled": "offUnlessPressed",
    "cmake.options.statusBarVisibility": "compact",
    "cmake.showOptionsMovedNotification": false,
    "cmake.generator": "Unix Makefiles",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.currentLine.pullRequests.enabled": false,
    "gitlens.plusFeatures.enabled": false,
    "gitlens.virtualRepositories.enabled": false
}
